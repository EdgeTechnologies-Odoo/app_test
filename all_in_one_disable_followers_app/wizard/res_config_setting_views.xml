<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="disable_follower_res_config_settings_views" model="ir.ui.view">
			<field name="name">disable.follower.res.config.inherit</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="100"/>
			<field name="inherit_id" ref="base.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('app_settings_block')]/div[@id='business_documents']" position="after">
					<h2>Disable/Restrict to add followers</h2>
					<div class="row mt16 o_settings_container" id="disable_follower">
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="disable_follower_sale_order"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="disable_follower_sale_order"/>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="disable_follower_invoice_bill"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="disable_follower_invoice_bill"/>
							</div>
						</div>
						<div class="col-12 col-lg-6 o_setting_box">
							<div class="o_setting_left_pane">
								<field name="disable_follower_send_mail"/>
							</div>
							<div class="o_setting_right_pane">
								<label for="disable_follower_send_mail"/>
							</div>
						</div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>