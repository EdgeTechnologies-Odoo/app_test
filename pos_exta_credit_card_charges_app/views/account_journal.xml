<?xml version="1.0"?>
<odoo>
    <record id="account_journal_form_inherit" model="ir.ui.view">
    <field name="name">account.journal.form.inherit</field>
    <field name="model">pos.payment.method</field>
    <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
    <field name="arch" type="xml">
    	<xpath expr="//field[@name='is_cash_count']" position="after">
			<field name="is_credit"/>
		</xpath>
    </field>
	</record>


    <record id="view_pos_order_inherit_credit_charge" model="ir.ui.view">
    <field name="name">view.pos.order.inherit.credit.charge</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="credit_charges" force_save="1" widget="monetary"/>
            </xpath>
        </field>
    </record>

</odoo>
