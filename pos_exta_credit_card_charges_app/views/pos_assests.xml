<?xml version="1.0"?>
<odoo>
    <data>
        <template id="assets_for_pos_credit_charges" inherit_id="point_of_sale.assets">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/pos_exta_credit_card_charges_app/static/js/ProductScreen/ControlButtons/OrderChargesButton.js"/>
                <script type="text/javascript" src="/pos_exta_credit_card_charges_app/static/js/Popups/PosCreditPopup.js"/>
                <script type="text/javascript" src="/pos_exta_credit_card_charges_app/static/js/pos.js"/>
            </xpath>
        </template>
       
    <record id="pos_config_view_inherit_form" model="ir.ui.view">
        <field name="name">pos.config.inherit.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
			<xpath expr="//h2[@name='order']" position="before">
				<h2 name="order">Credit Card Charges Configuration</h2>
                <div class="row mt16 o_settings_container">
                	<div class="col-xs-12 col-md-6 o_setting_box" >
                        <div class="o_setting_left_pane">
                            <field name="enable_credit_charges"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_credit_charges"/>
                            <div class="text-muted">
                               Enable for apply credit charges
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-xs-12 col-md-6 o_setting_box"  attrs="{'invisible': [('enable_credit_charges', '=',False)]}">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="credit_charge"/>
                            <div>
                            <field name="credit_charge" attrs="{'required': [('enable_credit_charges', '=', True)]}"/>
                            </div>
                            <div class="text-muted">
                                Apply charges for credit card
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container"  attrs="{'invisible': [('enable_credit_charges', '=',False)]}">
                    <div id="category_reference" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="charges_type"/>
                            <div>
                            	<field name="charges_type"  attrs="{'required': [('enable_credit_charges', '=', True)]}"/>
                            </div>
                            <div class="text-muted">
                                Credit Charges Type
                            </div>
                        </div>
                    </div>
                    <div id="category_reference" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_credit_account_id"/>
                            <div>
                            	<field name="default_credit_account_id"  attrs="{'required': [('enable_credit_charges', '=', True)]}"/>
                            </div>
                            <div class="text-muted">
                                Default Credit Account Details
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
        
    </data>
</odoo>
