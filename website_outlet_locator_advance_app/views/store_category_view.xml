<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="store_category_form">
			<field name="name">store.category.form</field>
			<field name="model">store.category</field>
			<field name="arch" type="xml">
				<form string="description">
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name"/>
							</h1>
						</div>
					</sheet>
				</form>
			</field>
		</record>


		<record model='ir.ui.view' id='store_category_tree'>
			<field name='name'>store.category.tree</field>
			<field name='model'>store.category</field>
			<field name='arch' type='xml'>
				<tree string='description'>
					<field name="name"/>
				</tree>
			</field>
		</record>

		<record id="action_store_category" model="ir.actions.act_window">
			<field name="name">Store Category</field>
			<field name="res_model">store.category</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>
