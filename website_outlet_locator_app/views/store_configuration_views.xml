<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="location_website_form">
            <field name="name">location.website.form</field>
            <field name="model">store.location</field>
            <field name="arch" type="xml">
                <form string="Website Outlets">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_website_published"
                                    class="oe_stat_button"
                                    type="object" icon="fa-globe">
                                <field name="website_published" widget="boolean_button" options='{"terminology": {"string_true": "Published", "hover_false": "Publish"}}'/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_left oe_avatar"/>&amp;nbsp;&amp;nbsp;
                        <div class="oe_left">
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                        <group>
                            <group string="Coordinates">
                                <field name="map_coordinates" widget="radio"/>
                            </group>
                            
                            <group string="Store Details" name="other">
                                <field name="contact" />
                                <field name="mobile"/>
                                <field name="email" />
                            </group>
                        </group>
                        <group>
                            <group string="Address" attrs="{'invisible':[('map_coordinates','==','manual')]}">
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" attrs="{'required':[('map_coordinates','==','address')], 'invisible':[('map_coordinates','==','manual')]}"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city" attrs="{'required':[('map_coordinates','==','address')], 'invisible':[('map_coordinates','==','manual')]}"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' attrs="{'invisible':[('map_coordinates','==','manual')]}" />
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' attrs="{'required':[('map_coordinates','==','address')], 'invisible':[('map_coordinates','==','manual')]}"/>
                                </div>
                            </group>
                            <group string="Longitude and Latitude" attrs="{'invisible':[('map_coordinates','==','address')]}">
                                <field name="latitude" attrs="{'required':[('map_coordinates','==','manual')], 'invisible':[('map_coordinates','==','address')]}"/>
                                <field name="longitude" attrs="{'required':[('map_coordinates','==','manual')], 'invisible':[('map_coordinates','==','address')]}"/>
                            </group>
                        </group>
                </sheet>
                </form>
            </field>
        </record>
        
        <record model='ir.ui.view' id='website_location_tree'>
            <field name='name'>website.location.tree</field>
            <field name='model'>store.location</field>
            <field name='arch' type='xml'>
                <tree string='Website Outlets'>
                    <field name='name'/>
                    <field name='contact'/>
                    <field name='email'/>
                    <field name='map_coordinates'/>
                    <field name='website_published' string="Published"/>
                </tree>
            </field>
        </record>

        <record id="action_website_location" model="ir.actions.act_window">
            <field name="name">Website Outlets</field>
            <field name="res_model">store.location</field>
        </record>

        


        <menuitem id="menu_location_settings" name="Outlet Configuration" sequence="48" parent="website.menu_website_global_configuration"/>

        <menuitem id="website_location_menu" name="Website Outlets" parent="menu_location_settings" action="action_website_location"/>

        <menuitem id="menu_seo_url_public_category"
            action="action_store_setting"
            parent="menu_location_settings" name="Outlet Settings"/>

    </data>
</odoo>
