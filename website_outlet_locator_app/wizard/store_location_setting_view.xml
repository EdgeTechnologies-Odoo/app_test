<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="store_setting_form">
            <field name="name">store.setting.form</field>
            <field name="model">store.setting</field>
            <field name="arch" type="xml">
                <form string="description">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_website_published"
                                    class="oe_stat_button"
                                    type="object" icon="fa-globe">
                                <field name="website_published" widget="boolean_button" options='{"terminology": {"string_true": "Published", "hover_false": "Publish"}}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    <group>
                        <group string="Intial Map Location" name="map_setting">
                            <field name="map_center" widget="radio"/>
                            <field name="manual_options" attrs="{'invisible':[('map_center','==','auto')]}"/>
                        </group>
                        <group string="Map Settings">
                            <field name="map_type"/>
                            <field name="map_zoom"/>
                            <label for="search_radius"/>
                            <div name="search_radius">
                                <div class="oe_inline">
                                    <field name="search_radius"/> 
                                </div>
                            </div>
                            <label for="google_api_key"/>
                            <div name="google_api_key">
                                <div class="oe_inline">
                                    <field name="google_api_key" /> (Required for accessing map.)
                                </div>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group string="Address" name="address" attrs="{'invisible':['|',('manual_options','!=','address'),('map_center','=','auto')]}">
                            <label for="street" string="Address" attrs="{'invisible':[('manual_options','!=','address')]}"/>
                            <div class="o_address_format" attrs="{'invisible':[('manual_options','!=','address')]}">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group string="Coordinates" name="coordinate" attrs="{'invisible':['|',('manual_options','!=','manual'),('map_center','=','auto')]}">
                            <field name="latitude" attrs="{'invisible':[('manual_options','=','address')]}"/>
                            <field name="longitude" attrs="{'invisible':[('manual_options','=','address')]}"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model='ir.ui.view' id='store_setting_tree'>
            <field name='name'>store.setting.tree</field>
            <field name='model'>store.setting</field>
            <field name='arch' type='xml'>
                <tree string='description'>
                    <field name="name"/>
                    <field name="map_type"/>
                    <field name="map_zoom"/>
                    <field name="search_radius"/>
                    <field name="google_api_key" />
                </tree>
            </field>
        </record>

        <record id="action_store_setting" model="ir.actions.act_window">
            <field name="name">Google Map Configuration</field>
            <field name="res_model">store.setting</field>
        </record>


    </data>
</odoo>
